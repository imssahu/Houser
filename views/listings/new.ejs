<% layout("/layouts/boilerplate")-%>
<body>
  <div class="row">
    <div class="col-8 offset-2">
      <h2>Create a New Listing</h2>
      <form
        method="post"
        action="/listings"
        novalidate
        class="needs-validation"
        enctype="multipart/form-data"
      >
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input
            name="listing[title]"
            placeholder="Enter Title"
            type="text"
            class="form-control"
            required
          />
          <div class="valid-feedback">Title looks good!</div>
        </div>
        <br />
        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea
            name="listing[description]"
            class="form-control"
            required
          ></textarea>
          <div class="invalid-feedback">Add a detailed description</div>
        </div>
        <br />
        <div class="mb-3">
          <label for="image" class="form-label">Upload Listing Image</label>
          <input
            name="listing[image]"
            type="file"
            class="form-control"
            required
          />
        </div>
        <div class="row">
          <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input
              name="listing[price]"
              placeholder="Enter Price"
              type="number"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Enter a valid price</div>
          </div>
          <br />
          <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Country</label>
            <input
              name="listing[country]"
              placeholder="Enter Country"
              type="text"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Please enter country name</div>
          </div>
        </div>
        <br />
        <div class="mb-3">
          <label for="location" class="form-label">Location</label>
          <input
            name="listing[location]"
            placeholder="Enter Location"
            type="text"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Please enter a location!</div>
        </div>
        <br />
        <button class="btn btn-dark add-btn">Add Details</button>
      </form>
    </div>
  </div>
</body>
